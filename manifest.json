{
  "manifest_version": 3,
  "name": "Element Click Tracker",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://cockpit-sta.airhelp.com/*",
    "*://cockpit.airhelp.com/*"
  ]
}